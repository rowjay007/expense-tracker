datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  password String
  expenses Expense[]
}

model Expense {
  id      Int    @id @default(autoincrement())
  title   String
  amount  Float
  date    DateTime
  userId  Int
  User    User   @relation(fields: [userId], references: [id])
}
